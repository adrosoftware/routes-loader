{
    "name": "adrosoftware/zerp-loader",
    "description": "Zend Expressive helper class to load routes files and pipelines.",
    "license": "MIT",
    "keywords": [
        "ze",
        "zendexpressive",
        "adorsoftware"
    ],
    "support": {
        "issues": "https://github.com/adrosoftware/zerp-loader/issues",
        "source": "https://github.com/adrosoftware/zerp-loader"
    },
    "homepage": "http://github.com/adrosoftware/zerp-loader",
    "authors": [
        {
            "name": "Adro Rocker",
            "email": "me@adro.rocks"
        }
    ],
    "require": {
        "php": "^7.0",
        "zendframework/zend-stdlib": "^3.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "AdroSoftware\\Zerp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdroSoftware\\Zerp\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}