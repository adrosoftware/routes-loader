{
    "name": "adrosoftware/zerp-loader",
    "description": "Zend Expressive helper class to load routes files and pipelines.",
    "license": "BSD-3-Clause",
    "keywords": [
        "ze",
        "zendexpressive",
        "adorsoftware"
    ],
    "support": {
        "issues": "https://github.com/zendframework/zend-config-aggregator/issues",
        "source": "https://github.com/zendframework/zend-config-aggregator"
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zend-stdlib": "^2.7.7 || ^3.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7.21 || ^6.3"
    },
    "autoload": {
        "psr-4": {
            "AdroSoftware\\Zerp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdroSoftware\\Zerp\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}